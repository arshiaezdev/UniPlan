<Window x:Class="UniPlan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="UniPlan" 
        Height="800" Width="1400"  
        Background="#F4F7F9" 
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBackground" Color="#F4F7F9"/>
        <SolidColorBrush x:Key="SidebarBackground" Color="#20202A"/>
        <SolidColorBrush x:Key="ContentBackground" Color="Transparent"/>
        <SolidColorBrush x:Key="AccentColor" Color="#0078D4"/>
        <SolidColorBrush x:Key="TextForeground" Color="#20202A"/>
        <SolidColorBrush x:Key="TextMuted" Color="#64748B"/>

        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3E4452"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4E5565"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#383845"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#3E4452"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <Grid Background="Transparent">
                                <TextBlock x:Name="Arrow" Text="&#xE76B;" FontFamily="Segoe MDL2 Assets" 
                                           FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Center" 
                                           Foreground="#AAAAAA" Margin="5,0,0,0">
                                    <TextBlock.RenderTransform>
                                        <RotateTransform Angle="0" CenterX="5" CenterY="5"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                                <ContentPresenter HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4E5565"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#383845"/>
                                <Setter TargetName="Arrow" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="-90" CenterX="5" CenterY="5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SubMenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="45,5,15,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3E4452"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TopActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BtnBorder" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="#006AC2"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RightAlignedTextColumnStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Foreground" Value="{StaticResource TextForeground}"/>
        </Style>
    </Window.Resources>

    <Grid FlowDirection="RightToLeft">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="249*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource SidebarBackground}" Padding="15" FlowDirection="LeftToRight">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <Border x:Name="BorderSearchBar" CornerRadius="6" BorderThickness="1" BorderBrush="#3F3F46" Height="38" Padding="12,0" Background="#F4F7F9" FlowDirection="RightToLeft" Margin="0,20,0,15">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="&#xE721;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Foreground="{StaticResource AccentColor}" FontSize="14" Margin="0,0,10,0"/>
                            <TextBox x:Name="TxtSearch"
         Grid.Column="1"
         BorderThickness="0"
         VerticalAlignment="Center"
         Foreground="Black"
         Background="Transparent"
         CaretBrush="{StaticResource AccentColor}"
         FontSize="13"
         FlowDirection="RightToLeft"
         TextChanged="TxtSearch_TextChanged"/>

                        </Grid>
                    </Border>

                    <Separator Margin="0,10" Background="#4A4A5A" />

                    <TextBlock Text="مدیریت فایل" Foreground="#AAAAAA" FontSize="11" Margin="0,5,10,8" HorizontalAlignment="Right" FontWeight="Bold"/>
                    <Button x:Name="BtnImportExcel1" Style="{StaticResource SidebarButtonStyle}" Click="BtnImportExcel_Click">
                        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                            <TextBlock  Text="&#xE8B5;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" FontSize="16" Foreground="{StaticResource AccentColor}" Margin="0,0,10,0"/>
                            <TextBlock Text="دریافت فایل اکسل" VerticalAlignment="Center" FontFamily="Tahoma"/>
                        </StackPanel>
                    </Button>

                    <ToggleButton x:Name="BtnSave" Style="{StaticResource SidebarToggleButtonStyle}">
                        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                            <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" FontSize="16" Foreground="{StaticResource AccentColor}" Margin="0,0,10,0"/>
                            <TextBlock Text="ذخیره فایل اکسل" VerticalAlignment="Center" FontFamily="Tahoma"/>
                        </StackPanel>
                    </ToggleButton>
                    <StackPanel Visibility="{Binding IsChecked, Converter={StaticResource BoolToVis}, ElementName=BtnSave}">
                        <Button Content="نیمسال اول" Style="{StaticResource SubMenuButtonStyle}" Click="BtnSaveSem1_Click"/>
                        <Button Content="نیمسال دوم" Style="{StaticResource SubMenuButtonStyle}" Click="BtnSaveSem2_Click"/>
                        <Button Content="نیمسال سوم" Style="{StaticResource SubMenuButtonStyle}" Click="BtnSaveSem3_Click"/>
                        <Button Content="نیمسال چهارم" Style="{StaticResource SubMenuButtonStyle}" Click="BtnSaveSem4_Click"/>
                        <Button Content="ذخیره همه" Style="{StaticResource SubMenuButtonStyle}" Click="BtnSaveSemAll_Click"/>
                    </StackPanel>

                    <ToggleButton x:Name="BtnShematic" Style="{StaticResource SidebarToggleButtonStyle}">
                        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                            <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" FontSize="16" Foreground="{StaticResource AccentColor}" Margin="0,0,10,0"/>
                            <TextBlock Text="خروجی برنامه هفتگی" VerticalAlignment="Center" FontFamily="Tahoma"/>
                        </StackPanel>
                    </ToggleButton>
                    <StackPanel Visibility="{Binding IsChecked, Converter={StaticResource BoolToVis}, ElementName=BtnShematic}">
                        <Button Content="نیمسال اول" Style="{StaticResource SubMenuButtonStyle}" Click="BtnShematicSem1_Click"/>
                        <Button Content="نیمسال دوم" Style="{StaticResource SubMenuButtonStyle}" Click="BtnShematicSem2_Click"/>
                        <Button Content="نیمسال سوم" Style="{StaticResource SubMenuButtonStyle}" Click="BtnShematicSem3_Click"/>
                        <Button Content="نیمسال چهارم" Style="{StaticResource SubMenuButtonStyle}" Click="BtnShematicSem4_Click"/>
                    </StackPanel>



                    <Separator Margin="0,10" Background="#4A4A5A" />

                    <StackPanel x:Name="ControlButtons" Margin="0,10,0,0">
                        <TextBlock Text="عملیات رکوردها" Foreground="#AAAAAA" FontSize="11" Margin="0,0,10,8" HorizontalAlignment="Right" FontWeight="Bold"/>

                        <Button x:Name="BtnAdd" Style="{StaticResource SidebarButtonStyle}" Click="BtnSaveData_Click">
                            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                                <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" FontSize="16" Foreground="{StaticResource AccentColor}" Margin="0,0,10,0"/>
                                <TextBlock Text="افزودن" VerticalAlignment="Center" FontFamily="Tahoma"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="BtnEdit" Style="{StaticResource SidebarButtonStyle}" Click="BtnEditRecord_Click">
                            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                                <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" FontSize="16" Foreground="{StaticResource AccentColor}" Margin="0,0,10,0"/>
                                <TextBlock Text="ویرایش" VerticalAlignment="Center" FontFamily="Tahoma"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="BtnDelete" Style="{StaticResource SidebarButtonStyle}" Click="BtnDeleteRecord_Click">
                            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                                <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" FontSize="16" Foreground="{StaticResource AccentColor}" Margin="0,0,10,0"/>
                                <TextBlock Text="حذف" VerticalAlignment="Center" FontFamily="Tahoma"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnReset" Style="{StaticResource SidebarButtonStyle}" Click="BtnReset_Click">
                            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                                <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" FontSize="16" Foreground="{StaticResource AccentColor}" Margin="0,0,10,0"/>
                                <TextBlock Text="تازه سازی" VerticalAlignment="Center" FontFamily="Tahoma"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnDeleteAll" Style="{StaticResource SidebarButtonStyle}" Click="BtnDeleteAll_Click">
                            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                                <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" FontSize="16" Foreground="#EF4444" Margin="0,0,10,0"/>
                                <TextBlock Text="حذف همه" VerticalAlignment="Center" FontFamily="Tahoma"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="1" VerticalAlignment="Bottom" Margin="0,0,0,5">
                    <Separator Margin="0,10,0,5" Background="#4A4A5A" />
                    <Button Style="{StaticResource SidebarButtonStyle}" Click="BtnExit_Click">
                        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                            <TextBlock Text="&#xE7E8;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" FontSize="16" Foreground="#FF5555" Margin="0,0,10,0"/>
                            <TextBlock Text="خروج از برنامه" VerticalAlignment="Center" FontFamily="Tahoma"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="25,25,25,25" Background="Transparent" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="1" x:Name="BorderAppHeader" Background="{DynamicResource SidebarBackground}" CornerRadius="4" Margin="0,0,0,15">
                <TextBlock Text="سامانه برنامه‌ریزی دانشگاهی" Foreground="White" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" Margin="15,0" FlowDirection="LeftToRight" TextAlignment="Right" HorizontalAlignment="Center"/>
            </Border>

            <Grid Grid.Row="2">
                <Border x:Name="BorderDataGridContainer" CornerRadius="4" BorderThickness="0" Background="{StaticResource SidebarBackground}" ClipToBounds="True">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="315" ShadowDepth="5" BlurRadius="10" Opacity="0.3"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="1"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="{DynamicResource SidebarBackground}" CornerRadius="4,4,0,0" Padding="0" Margin="0">
                                <Grid FlowDirection="RightToLeft">
                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition Width="77*"/>
                                        <ColumnDefinition Width="190*"/>
                                        <ColumnDefinition Width="140*"/>
                                        <ColumnDefinition Width="222*"/>
                                        <ColumnDefinition Width="220*"/>
                                        <ColumnDefinition Width="160*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="نیمسال" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,10,0" FlowDirection="LeftToRight" TextAlignment="Right" Height="16"/>
                                    <TextBlock Grid.Column="1" Text="درس" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,10,0" FlowDirection="LeftToRight" TextAlignment="Right" Height="16"/>
                                    <TextBlock Grid.Column="2" Text="کددرس" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,10,0" FlowDirection="LeftToRight" TextAlignment="Right" Height="16"/>
                                    <TextBlock Grid.Column="3" Text="مدرس‌اصلي" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,10,0" FlowDirection="LeftToRight" TextAlignment="Right" Height="16"/>
                                    <TextBlock Grid.Column="4" Text="ساعت‌کلاس‌مدرس‌اصلي" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,10,0" FlowDirection="LeftToRight" TextAlignment="Right" Height="16"/>
                                    <TextBlock Grid.Column="5" Text="تاریخ آزمون" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,10,0" FlowDirection="LeftToRight" TextAlignment="Right" Height="16"/>
                                    <TextBlock Grid.Column="6" Text="ظرفیت" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,10,0" FlowDirection="LeftToRight" TextAlignment="Right" Height="16"/>
                                </Grid>
                            </Border>
                            <Rectangle Grid.Row="1" Fill="#3F3F46" Opacity="0.5"/>
                        </Grid>

                        <DataGrid Grid.Row="1"
          x:Name="DataGridClasses"
          AutoGenerateColumns="False"
          IsReadOnly="False"
          HeadersVisibility="None"
          RowHeaderWidth="0"
          BorderThickness="0"
          Background="#F8FAFB"
          AlternationCount="2"
          AlternatingRowBackground="#EEF2F7"
          GridLinesVisibility="None"
          SelectionMode="Single"
          SelectionUnit="FullRow"
          CanUserAddRows="False"
          CanUserResizeColumns="True"
          CanUserSortColumns="False"
          CanUserReorderColumns="False"
          ClipToBounds="True"
          Margin="0"
          Padding="0">

                            <DataGrid.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    <Setter Property="TextAlignment" Value="Right"/>
                                    <Setter Property="Padding" Value="6,2"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="FontFamily" Value="Tahoma"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="CaretBrush" Value="#0078D4"/>
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.CellStyle>
                                <Style TargetType="{x:Type DataGridCell}">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="8,3"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextForeground}"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.RowStyle>
                                <Style TargetType="{x:Type DataGridRow}">
                                    <Setter Property="Background" Value="#F8FAFB"/>
                                    <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    <Setter Property="FontFamily" Value="Tahoma"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Height" Value="35"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>

                                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                            <Setter Property="Background" Value="#EDF2F7"/>
                                        </Trigger>

                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#DCEBFF"/>
                                        </Trigger>

                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#93C5FD"/>
                                            <Setter Property="Foreground" Value="#0F172A"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>

                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.Columns>

                                <DataGridTextColumn Binding="{Binding Semester}" Width="77*" />
                                <DataGridTextColumn Binding="{Binding CourseTitle}" Width="190*" />
                                <DataGridTextColumn Binding="{Binding CourseCode}" Width="140*" />
                                <DataGridTextColumn Binding="{Binding MainInstructor}" Width="222*" />
                                <DataGridTextColumn Binding="{Binding ClassTime}" Width="220*" />
                                <DataGridTextColumn Binding="{Binding ExamDate}" Width="160*" />
                                <DataGridTextColumn Binding="{Binding Capacity}" Width="60*" />
                            </DataGrid.Columns>

                        </DataGrid>
                    </Grid>
                </Border>
                <TextBlock x:Name="TxtRecordCount" Foreground="#64748B" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,5,10" FontFamily="Tahoma"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
<Window x:Class="UniPlan.AddEditRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ثبت درس"
        Height="520"
        Width="880"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F4F7F9">

        <Window.Resources>

                <Style TargetType="TextBox">
                        <Setter Property="FlowDirection"
                                Value="RightToLeft"/>
                        <Setter Property="TextAlignment"
                                Value="Right"/>
                        <Setter Property="FontFamily"
                                Value="Tahoma"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="Height"
                                Value="38"/>
                        <Setter Property="Background"
                                Value="#F8FAFB"/>
                        <Setter Property="BorderBrush"
                                Value="#DDE3EA"/>
                        <Setter Property="BorderThickness"
                                Value="1"/>
                        <Setter Property="Padding"
                                Value="8,2"/>
                </Style>

                <Style TargetType="ComboBox">
                        <Setter Property="FlowDirection"
                                Value="RightToLeft"/>
                        <Setter Property="FontFamily"
                                Value="Tahoma"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="Height"
                                Value="38"/>
                        <Setter Property="Background"
                                Value="#F8FAFB"/>
                        <Setter Property="BorderBrush"
                                Value="#DDE3EA"/>
                        <Setter Property="BorderThickness"
                                Value="1"/>
                        <Setter Property="Padding"
                                Value="8,2"/>
                        <Setter Property="HorizontalContentAlignment"
                                Value="Right"/>
                </Style>

                <Style x:Key="PrimaryButtonStyle"
                       TargetType="Button">
                        <Setter Property="Width"
                                Value="150"/>
                        <Setter Property="Height"
                                Value="38"/>
                        <Setter Property="FontFamily"
                                Value="Tahoma"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="FontWeight"
                                Value="SemiBold"/>
                        <Setter Property="Background"
                                Value="#0078D4"/>
                        <Setter Property="Foreground"
                                Value="White"/>
                        <Setter Property="BorderThickness"
                                Value="0"/>
                        <Setter Property="Cursor"
                                Value="Hand"/>
                        <Setter Property="Template">
                                <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver"
                                                                 Value="True">
                                                                <Setter TargetName="border"
                                                                        Property="Background"
                                                                        Value="#006AC2"/>
                                                        </Trigger>
                                                </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                </Setter.Value>
                        </Setter>
                </Style>

                <Style x:Key="SecondaryButtonStyle"
                       TargetType="Button">
                        <Setter Property="Width"
                                Value="150"/>
                        <Setter Property="Height"
                                Value="38"/>
                        <Setter Property="FontFamily"
                                Value="Tahoma"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="FontWeight"
                                Value="SemiBold"/>
                        <Setter Property="Background"
                                Value="#E5E7EB"/>
                        <Setter Property="Foreground"
                                Value="#111827"/>
                        <Setter Property="BorderThickness"
                                Value="0"/>
                        <Setter Property="Cursor"
                                Value="Hand"/>
                        <Setter Property="Template">
                                <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver"
                                                                 Value="True">
                                                                <Setter TargetName="border"
                                                                        Property="Background"
                                                                        Value="#D1D5DB"/>
                                                        </Trigger>
                                                </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                </Setter.Value>
                        </Setter>
                </Style>

        </Window.Resources>

        <Grid Margin="20"
              FlowDirection="RightToLeft">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <Border Grid.Row="0"
                        Background="#20202A"
                        CornerRadius="6"
                        Padding="14"
                        Margin="0,0,0,15">
                        <TextBlock x:Name="TxtTitle"
                                   Text="افزودن رکورد جدید"
                                   Foreground="White"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   FontFamily="Tahoma"
                                   HorizontalAlignment="Center"/>
                </Border>


                <Border Grid.Row="1"
                        Background="White"
                        CornerRadius="10"
                        Padding="18"
                        FlowDirection="RightToLeft">
                        <Border.Effect>
                                <DropShadowEffect Color="Black"
                                                  BlurRadius="12"
                                                  ShadowDepth="3"
                                                  Opacity="0.15"/>
                        </Border.Effect>

                        <Grid>
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>


                                <StackPanel Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="10,0,0,15">
                                        <TextBlock Text="نیمسال"
                                                   Foreground="#64748B"
                                                   Margin="0,0,0,6"/>
                                        <ComboBox x:Name="CmbSemester"
                                                  VerticalContentAlignment="Center">
                                                <ComboBoxItem Content="اول"/>
                                                <ComboBoxItem Content="دوم"/>
                                                <ComboBoxItem Content="سوم"/>
                                                <ComboBoxItem Content="چهارم"/>
                                        </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="10,0,10,15">
                                        <TextBlock Text="نام درس"
                                                   Foreground="#64748B"
                                                   Margin="0,0,0,6"/>
                                        <TextBox x:Name="TxtCourseTitle"
                                                 VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0"
                                            Grid.Column="2"
                                            Margin="10,0,10,15">
                                        <TextBlock Text="کد درس"
                                                   Foreground="#64748B"
                                                   Margin="0,0,0,6"/>
                                        <TextBox x:Name="TxtCourseCode"
                                                 VerticalContentAlignment="Center"
                                                 PreviewTextInput="OnlyNumericInPreviewTextInput"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0"
                                            Grid.Column="3"
                                            Margin="10,0,0,15">
                                        <TextBlock Text="مدرس اصلی"
                                                   Foreground="#64748B"
                                                   Margin="0,0,0,6"/>
                                        <TextBox x:Name="TxtInstructor"
                                                 VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="10,0,0,15">
                                        <TextBlock Text="ظرفیت"
                                                   Foreground="#64748B"
                                                   Margin="0,0,0,6"/>
                                        <TextBox x:Name="TxtCapacity"
                                                 VerticalContentAlignment="Center"
                                                 PreviewTextInput="OnlyNumericInPreviewTextInput"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="10,0,10,15">
                                        <TextBlock Text="تاریخ آزمون (فرمت: 1405/01/15)"
                                                   Foreground="#64748B"
                                                   Margin="0,0,0,6"/>
                                        <TextBox x:Name="TxtExamDateShamsi"
                                                 Text="1405/01/15"
                                                 TextAlignment="Left"
                                                 VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1"
                                            Grid.Column="2"
                                            Margin="10,0,10,15">
                                        <TextBlock Text="ساعت آزمون"
                                                   Foreground="#64748B"
                                                   Margin="0,0,0,6"/>
                                        <ComboBox x:Name="CmbExamTime"
                                                  VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1"
                                            Grid.Column="3"
                                            Margin="10,0,0,15">
                                        <TextBlock Text="روز شروع کلاس"
                                                   Foreground="#64748B"
                                                   Margin="0,0,0,6"/>
                                        <ComboBox x:Name="CmbClassDay"
                                                  VerticalContentAlignment="Center">
                                                <ComboBoxItem Content="شنبه"/>
                                                <ComboBoxItem Content="یکشنبه"/>
                                                <ComboBoxItem Content="دوشنبه"/>
                                                <ComboBoxItem Content="سه‌شنبه"/>
                                                <ComboBoxItem Content="چهارشنبه"/>
                                        </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Row="2"
                                            Grid.Column="0"
                                            Margin="10,0,0,15">
                                        <TextBlock Text="ساعت شروع"
                                                   Foreground="#64748B"
                                                   Margin="0,0,0,6"/>
                                        <ComboBox x:Name="CmbStartTime"
                                                  VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2"
                                            Grid.Column="1"
                                            Margin="10,0,10,15">
                                        <TextBlock Text="ساعت پایان"
                                                   Foreground="#64748B"
                                                   Margin="0,0,0,6"/>
                                        <ComboBox x:Name="CmbEndTime"
                                                  VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <Border x:Name="ErrorBorder"
                                        Grid.Row="3"
                                        Grid.ColumnSpan="4"
                                        Background="#FEE2E2"
                                        BorderBrush="#EF4444"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="8"
                                        Margin="0,10,0,0"
                                        Visibility="Collapsed">
                                        <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="⚠"
                                                           Foreground="#B91C1C"
                                                           FontWeight="Bold"
                                                           Margin="0,0,8,0"/>
                                                <TextBlock x:Name="TxtError"
                                                           Foreground="#B91C1C"
                                                           FontSize="13"
                                                           VerticalAlignment="Center"/>
                                        </StackPanel>
                                </Border>
                        </Grid>
                </Border>

                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            Margin="0,15,0,0"
                            FlowDirection="LeftToRight">
                        <Button x:Name="BtnSave"
                                Click="BtnSave_Click"
                                Content="ذخیره"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,0,10,0"/>
                        <Button x:Name="BtnCancel"
                                Click="BtnCancel_Click"
                                Content="انصراف"
                                Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>

        </Grid>
</Window>
